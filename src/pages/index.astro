<style>
  .perfil {
    margin: 0 auto;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .buttons {
    padding-top: 16px;
    margin: auto;
    display: flex;
    justify-content: center;
    gap: 16px;
    width: 300px;
  }

  .button {
    vertical-align: middle;
    flex: 1;
  }
  .links {
    padding-top: 16px;
    padding-bottom: 16px;
    margin: auto;
    display: flex;
    justify-content: center;
    gap: 16px;
    width: 300px;
  }
  .links svg {
    width: 28px;
    height: 28px;
    vertical-align: middle;
    margin-left: 8px;
  }

  @media (min-width: 720px) {
    .presentation-container {
      display: flex;
      gap: 32px;
      justify-content: center;
      align-items: center;
      max-width: 720px;
      margin: auto;
      flex-direction: row-reverse;
      margin-bottom: 72px;
      margin-top: 48px;
    }
    .perfil {
      flex: 1;
      height: 100%;
      border-radius: initial;
    }
    .perfil img {
      width: 200px;
      height: 200px;
      border-radius: 50%;
    }

    .presentation {
      flex: 1;
      text-align: left;
    }

    .buttons {
      display: block;
      margin: initial;
    }
    .links {
      display: block;
      margin: initial;
    }
    .links svg:hover {
      box-shadow: 0px 2px 0px var(--background-dark);
    }
    .shadow-dark svg:hover {
      box-shadow: 0 2px 0px var(--text-darktheme);
    }
  }
</style>
