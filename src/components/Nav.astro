---
import ToggleTheme from "./ToggleTheme.astro";
import { Home, FolderCode, Brain, MailPlus } from "@lucide/astro";

const navItems = [
  { path: "#inicio", label: "Inicio", icon: Home },
  { path: "#proyectos", label: "Proyectos", icon: FolderCode },
  { path: "#skills", label: "Skills", icon: Brain },
  { path: "#contacto", label: "Contacto", icon: MailPlus },
];
---

<nav>
  <ul class="navlist">
    {
      navItems.map((item) => {
        const Icon = item.icon;
        return (
          <li class={item.path === "/" ? "indexPath" : ""}>
            <a
              href={item.path}
              class={item.path === "/" ? "item indexPath" : "item"}
            >
              {Icon && <Icon size={18} />}
              <span>{item.label}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>

<script defer>
  document.addEventListener("DOMContentLoaded", () => {
    const path = window.location.pathname;
    console.log(path);
    if (path === "/") {
      document.querySelector(".indexPath").classList.add("active");
    } else if (path === "/blog" || path === "/blog/") {
      document.querySelector(".blogPath").classList.add("active");
    }
  });

  const $navLinks = document.querySelectorAll('.navlist a[href^="#"]');

  $navLinks.forEach((link) => {
    link.addEventListener("click", function (e) {
      e.preventDefault();

      const targetId = this.getAttribute("href");
      const targetElement = document.querySelector(targetId);

      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: "smooth",
        });
      }
    });
  });
</script>

<style>
  .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-weight: 100;
  }
  nav {
  }
  .navlist {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    height: 100%;
    width: 100%;
    list-style: none;
    position: relative;
    color: #888888;
  }
  .logo {
    width: 56px;
    height: 40px;
    position: absolute;
    cursor: pointer;
    left: 0;
  }
  .logo img {
    width: 100%;
    height: 100%;
  }

  nav {
    background-color: var(--background-dark);
    border-top: 1px solid var(--border);
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    height: 48px;
  }
  ul {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }
  li {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  a {
    font-size: 14px;
    font-weight: 700;
  }

  @media (min-width: 720px) {
    nav {
      height: 42px;
      padding: 8px;
      position: initial;
      max-width: 720px;
      margin: auto;
      margin-top: 24px;
      border-radius: 16px;
    }
    ul {
      width: 720px;
    }

    li:hover a:not(.active):not(.logo) {
      border-bottom: 2px solid var(--background-dark);
    }
  }
</style>
