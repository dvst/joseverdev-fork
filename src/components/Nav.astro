---
import ToggleTheme from "./ToggleTheme.astro";
---

<nav>
  <ul class="navlist">
    <li class="">
      <a href="/" class="logo">
        <img src="/favicon.svg" alt="Logo" class="logo" />
      </a>
    </li>
    <li class="">
      <a href="/" class="indexPath">Inicio</a>
    </li>
    <li>
      <a href="/blog" class="blogPath">Blog</a>
    </li>
    <li>
      <ToggleTheme />
    </li>
  </ul>
</nav>

<script defer>
  document.addEventListener("DOMContentLoaded", () => {
    const path = window.location.pathname;
    console.log(path);
    if (path === "/") {
      document.querySelector(".indexPath").classList.add("active");
    } else if (path === "/blog" || path === "/blog/") {
      document.querySelector(".blogPath").classList.add("active");
    }
  });
</script>

<style>
  .navlist {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    height: 100%;
    width: 100%;
    list-style: none;
    position: relative;
  }
  .logo {
    width: 56px;
    height: 40px;
    position: absolute;
    cursor: pointer;
    left: 0;
  }
  .logo img {
    width: 100%;
    height: 100%;
  }
  nav {
    color: var(--text-dark);
    background-color: var(--orange);
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    height: 48px;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }
  ul {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }
  li {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  a {
    font-size: 14px;
    font-weight: 700;
  }

  @media (min-width: 720px) {
    nav {
      height: 42px;
      padding: 8px;
      position: initial;
      max-width: 720px;
      margin: auto;
      margin-top: 24px;
      border-radius: 16px;
    }
    ul {
      width: 720px;
    }

    li:hover a:not(.active):not(.logo) {
      border-bottom: 2px solid var(--background-dark);
    }
  }
</style>
