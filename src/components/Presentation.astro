---
import SocialMedia from "../components/SocialMedia.astro";
import IconLogo from "../icons/IconLogo.astro";
---

<section id="inicio" class="presentation-container">
  <div class="logo">
    <IconLogo size={2} />
  </div>
  <div class="presentation">
    <h1>JOSEVERDEV</h1>
    <h3 class="title-3">Fullstack Developer</h3>
    <p class="paragraph">
      Apasionado por el codigo y el aprendizaje autodidacta.<br />
      Creo soluciones web centradas en el usuario, aportando valor con innovaci√≥n
      y trabajo en equipo.
    </p>
    <a class="primary-button" href="#proyectos" id="projects-btn">
      VER PROYECTOS
    </a>
  </div>

  <SocialMedia />
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const $projectsBtn = document.getElementById("projects-btn");

    $projectsBtn?.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = $projectsBtn?.getAttribute("href");
      if (targetId) {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: "smooth" });
        }
      }
    });
  });
</script>

<style>
  .presentation-container {
    height: 100vh;
  }
  .presentation {
    padding-top: 6rem;
  }

  .logo {
    background-color: var(--background-dark);
    position: fixed;
    padding-top: 1rem;
    padding-bottom: 1rem;
    padding-left: 1rem;
    border-bottom: 1px solid #333333;
    width: 100vw;
    margin-bottom: 2rem;
  }
  .buttons-container {
    padding-top: 1rem;
    margin: auto;
    display: flex;
    justify-content: center;
    gap: 1rem;
    width: 300px;
  }
  .button {
    vertical-align: middle;
    flex: 1;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .projects-btn {
  }

  @media (min-width: 720px) {
    .perfil {
      flex: 1;
      height: 100%;
      border-radius: initial;
      width: 100%;
    }
    .perfil__img {
      width: 200px;
      height: 200px;
      border-radius: 50%;
    }
    .presentation {
      flex: 1;
      text-align: left;
    }
    .buttons-container {
      margin: 0;
    }
    .links {
      display: block;
      margin: initial;
    }
    .links svg:hover {
      box-shadow: 0px 2px 0px var(--background-dark);
    }
    .presentation-container {
      display: flex;
      flex-direction: row-reverse;
      align-items: center;
      margin: 32px auto;
    }
  }
</style>
