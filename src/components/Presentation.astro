---
import SocialMedia from "../components/SocialMedia.astro";
import perfil from "../assets/perfil-sm.webp";
---

<div class="presentation-container">
  <div class="perfil">
    <img
      class="perfil__img"
      src={perfil.src}
      alt="Foto de perfil de Joseverdev"
    />
  </div>
  <div class="presentation">
    <h1>Hola soy joseverdev</h1>
    <p>Desarrollador Web</p>
    <div class="buttons-container">
      <a
        href="mailto:jmu3612@gmail.com"
        aria-label="Enviar correo a jmu3612@gmail.com"
        class="button"
      >
        Contacto
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-mail"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
          ></path><path d="M3 7l9 6l9 -6"></path></svg
        >
      </a>
      <a
        href="https://github.com/joseverdev"
        target="_blank"
        rel="noopener noreferrer"
        class="button"
        aria-label="Ir a Github de joseverdev"
      >
        Github

        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path></svg
        >
      </a>
    </div>
    <SocialMedia />
  </div>
</div>

<style>
  .perfil {
    margin: 0 auto;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
  }
  .perfil__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .buttons-container {
    padding-top: 1rem;
    margin: auto;
    display: flex;
    justify-content: center;
    gap: 1rem;
    width: 300px;
  }
  .button {
    vertical-align: middle;
    flex: 1;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 720px) {
    .perfil {
      flex: 1;
      height: 100%;
      border-radius: initial;
      width: 100%;
    }
    .perfil__img {
      width: 200px;
      height: 200px;
      border-radius: 50%;
    }
    .presentation {
      flex: 1;
      text-align: left;
    }
    .buttons-container {
      margin: 0;
    }
    .links {
      display: block;
      margin: initial;
    }
    .links svg:hover {
      box-shadow: 0px 2px 0px var(--background-dark);
    }
    .presentation-container {
      display: flex;
      flex-direction: row-reverse;
      align-items: center;
      margin: 32px auto;
    }
  }
</style>
